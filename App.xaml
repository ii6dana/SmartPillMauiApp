<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartPillMauiApp"
             x:Class="SmartPillMauiApp.App">
    <Application.Resources>
        <ResourceDictionary>

            <Style TargetType="Shell" ApplyToDerivedTypes="True">
                <Setter Property="Shell.TabBarBackgroundColor" Value="#293241" />
                <Setter Property="Shell.TabBarForegroundColor" Value="#1465FF" />
                <Setter Property="Shell.TabBarTitleColor" Value="#FFFFFF" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="#A0A0A0" />
                <Setter Property="Shell.NavBarHasShadow" Value="False" />
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
    
    

    
    
