<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="SmartPillMauiApp.UserShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:userinterfaces="clr-namespace:SmartPillMauiApp.Views.UserInterfaces"
    Shell.FlyoutBehavior="Disabled"
    Title="SmartPill App">

    <TabBar>
        <ShellContent 
            Icon="caregivers.png"
            ContentTemplate="{DataTemplate userinterfaces:CaregiversPage}" />

        <ShellContent  
            Icon="home.png"
            ContentTemplate="{DataTemplate userinterfaces:HomePage}" />

        <ShellContent 
            Icon="user.png"
            ContentTemplate="{DataTemplate userinterfaces:PersonalSettingsPage}" />
    </TabBar>
</Shell>
